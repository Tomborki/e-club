{% extends 'rozlozeni.html.twig' %}

{# Page title #}
{% block title %}
    Můj profil
{% endblock title %}

{# Page description #}
{% block description %}Můj profil{% endblock description %}

{# Page keywords #}
{% block keywords %}{% endblock keywords %}

{% block content %}
    <div id="my-profile">
        <h2>Můj profil</h2>
        <div class="info-box">
            <h3>{{ name }} {{ surname }}</h3>
            {% if userAvatar != null %}
                <img src="/data/userAvatars/{{ userID }}/{{ userAvatar }}" alt="Profilový obrázek">
            {% else %}
                <img src="/data/userAvatars/default.png" alt="Profilový obrázek">
            {% endif %}
        </div>
    </div>
{% endblock content%}

{% block scripts %}

{% endblock scripts%}