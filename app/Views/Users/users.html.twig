{% extends 'rozlozeni.html.twig' %}

{# Page title #}
{% block title %}
    Uživatelé
{% endblock title %}

{# Page description #}
{% block description %}Stránka s uživateli{% endblock description %}

{# Page keywords #}
{% block keywords %}{% endblock keywords %}

{% block content %}
    <div id="users">
        <h2>Uživatelé</h2>
        <span class="drag-info">posouvejte doleva <i class='bx bx-arrow-from-left'></i></span>
        <div class="table-container">
            <table class="table table-striped" id="userTable">
                <thead>
                <tr>
                    <th scope="col">Jméno</th>
                    <th scope="col">Telefon</th>
                    <th scope="col">Email</th>
                    <th scope="col">Oddíl</th>
                </tr>
                </thead>
                <tbody>
                {% for user in allUsers %}
                    <tr>
                        <td class="align-middle">
                            {{ user.name }} {{ user.surname }}
                        </td>
                        <td class="align-middle"><a href="tel:{{ user.tel }}">{{ user.tel }}</a></td>
                        <td class="align-middle"><a href="mailto:{{ user.email }}">{{ user.email }}</a></td>
                        <td class="align-middle">{{ user.nameDivision }}</a></td>
                    </tr>
                {% endfor %}
            </table>
        </div>
    </div>
{% endblock content%}

{% block scripts %}
    <script>
        $(document).ready( function () {
            $('#userTable').DataTable({
                responsive: false,
            });
        } );
    </script>
{% endblock scripts%}