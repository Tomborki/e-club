{% extends 'rozlozeni.html.twig' %}

{# Page title #}
{% block title %}
    Oddíly
{% endblock title %}

{# Page description #}
{% block description %}Stránka s oddíly{% endblock description %}

{# Page keywords #}
{% block keywords %}{% endblock keywords %}

{% block content %}
    <div id="divisions">
        <h2>Oddíly</h2>
        {{ dump(divisions) }}

        <div class="table-container">
            <table class="table table-striped">
                <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Jméno oddílu</th>
                    <th scope="col">Akce</th>
                </tr>
                </thead>
                <tbody>
                {% for division in divisions %}
                <tr>
                    <th scope="row">{{ loop.index }}</th>
                    <td>{{ division.nameDivision }}</td>
                    <td>
                        <a class="btn btn-warning" href="divisions?action=likeDivision&id={{ division.id }}" role="button"> <i class='bx bxs-star'></i> Oblíbit oddíl</a>
                    </td>
                </tr>
                {% endfor %}
            </table>
        </div>
    </div>
{% endblock content%}

{% block scripts %}

{% endblock scripts%}