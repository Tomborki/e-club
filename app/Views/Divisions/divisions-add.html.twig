{% extends 'rozlozeni.html.twig' %}

{# Page title #}
{% block title %}
    Oddíly - Přidat oddíl
{% endblock title %}

{# Page description #}
{% block description %}Přidat nový oddíl{% endblock description %}

{# Page keywords #}
{% block keywords %}{% endblock keywords %}

{% block content %}
    <div id="divisions">
        <h2>Přidat oddíl</h2>
        <form method="post" action="/{{ pageName }}?form=addNewDivision">
            <div class="form-group">
                <label for="divisionName">Jméno oddílu</label>
                <input type="text" class="form-control form-control-lg" name="divisionName" id="divisionName" placeholder="Jméno oddílu" >
            </div>
            <div class="form-group">
                <label for="divisionChief">Vedoucí oddílu</label>
                <input type="text" class="form-control" name="divisionChief" id="divisionChief" placeholder="Vedoucí" >
            </div>
            <div class="form-group">
                <label for="emailContact">Email na vedoucího oddílu</label>
                <input type="email" class="form-control" name="emailContact" id="emailContact" placeholder="Email" >
            </div>
            <div class="form-group">
                <label for="telContact">Telefon na vedoucího oddílu</label>
                <input type="tel" class="form-control" aria-describedby="telHelp" name="telContact" id="telContact" pattern="[0-9]{3}[0-9]{3}[0-9]{3}" placeholder="Telefon" >
                <small id="telHelp" class="form-text text-muted">Telefon zadávejte ve fourmátu: 123456789</small>
            </div>
            <button type="submit" name="submitAddDivisionForm" class="btn btn-primary">Submit</button>
        </form>
    </div>
{% endblock content%}

{% block scripts %}

{% endblock scripts%}